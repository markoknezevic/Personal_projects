<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignIn_Activity">
    <Button
            android:text="Sign In"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSignIn" android:onClick="signIn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="86dp" android:layout_marginStart="86dp"
            app:layout_constraintEnd_toStartOf="@+id/btnSignUp" android:layout_marginEnd="64dp"
            android:layout_marginRight="64dp" android:layout_marginBottom="272dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="107dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordText"/>
    <Button
            android:text="Sign Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSignUp" android:onClick="signUp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="85dp" android:layout_marginRight="85dp"
            app:layout_constraintStart_toEndOf="@+id/btnSignIn" android:layout_marginLeft="64dp"
            android:layout_marginStart="64dp" android:layout_marginBottom="272dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="107dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordText"
            android:hint="Password"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="98dp" android:layout_marginStart="98dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" android:layout_marginRight="100dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/emailText" android:text="123456"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/emailText" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="184dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="97dp" android:layout_marginStart="97dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="101dp" android:layout_marginRight="101dp" android:hint="E-mail"
            android:text="markoknezevic75@gmail.com"/>
</android.support.constraint.ConstraintLayout>