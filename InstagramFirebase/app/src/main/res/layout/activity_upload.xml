<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UploadActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/commentText"
            android:hint="Comment" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="155dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="98dp"
            android:layout_marginStart="98dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp"/>
    <ImageView
            android:layout_width="228dp"
            android:layout_height="193dp" app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/imageView"
            android:onClick="selectImage" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="91dp"
            android:layout_marginStart="91dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="92dp"
            android:layout_marginRight="92dp" android:layout_marginTop="49dp"
            app:layout_constraintTop_toBottomOf="@+id/commentText"/>
    <Button
            android:text="Upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnUpload"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="88dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="66dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="258dp" app:layout_constraintHorizontal_bias="1.0" android:onClick="upload"/>
</android.support.constraint.ConstraintLayout>